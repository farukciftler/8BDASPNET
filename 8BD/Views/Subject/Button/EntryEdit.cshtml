@using _8BD.Helpers;
@inject HttpHelper _helper;
@{
    ViewData["Title"] = "EntryEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var id = ViewBag.id;
    var entry = _helper.GetEntryById(id);

}
<h2 class="Helvetica"> Tanım Düzenle</h2>
<form asp-controller="entry" asp-action="edit" method="post">

    <div class="md-form">
        <label for="form1" class="Helvetica">Başlık:</label>
        <input type="text" id="form1" class="form-control Helvetica" placeholder="@_helper.GetSubjectNameById(@entry.subjectId)" disabled>

    </div>

    <label for="form_message" class="Helvetica">Tanım:</label>
    <input type="text" name="id" value="@entry.id" hidden />
    <textarea type="text" name="newentry" id="girdi-area" value="@entry.entry" class="md-textarea form-control" rows="3">@entry.entry</textarea>
    <a href="/Subject?search=@_helper.GetSubjectNameById(@entry.subjectId)" style="margin-right:5px;"><button class="btn btn-dark Helvetica" style="margin-top: 10px;  float: right;">Vazgeç</button></a>
    <button type="submit" class="btn btn-dark Helvetica" style="margin-top: 10px;  float: right;">Gönder</button>
</form>