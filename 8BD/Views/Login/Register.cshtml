
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (@ViewBag.Message != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
    }
    if (@ViewBag.Danger != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Danger
        </div>
    }
}

<form class="form-horizontal" asp-controller="Login" asp-action="AddUser" method="POST">
    <fieldset>
        <div id="legend">
            <legend class="Helvetica" style="text-decoration: underline">kayıt sayfası</legend>
        </div>
        <div class="control-group">
            <!-- Username -->
            <label class="control-label Helvetica" for="username">kullanıcı adı</label>
            <div class="controls">
                <input type="text" id="username" name="username" placeholder="" class="input-xlarge Helvetica">
                <p class="help-block Helvetica" style="font-size:13px;">kullanıcı adınızı seçerken sonradan değiştiremeyeceğinizi unutmayın:)</p>
            </div>
        </div>

        <div class="control-group">
            <!-- E-mail -->
            <label class="control-label Helvetica" for="email">email</label>
            <div class="controls">
                <input type="text" id="email" name="email" placeholder="" class="input-xlarge Helvetica">
                <p class="help-block Helvetica" style="font-size:13px;">size arasıra mektup yollayabilmemiz için sanal posta adresinizi rica ediyoruz.</p>
            </div>
        </div>
        <div class="control-group">
            <!-- Password-->
            <label class="control-label Helvetica" for="password">şifre</label>
            <div class="controls">
                <input type="password" id="password" name="password" placeholder="" class="input-xlarge">
                <p class="help-block Helvetica" style="font-size:13px;">işe biraz gizem katmak için parolanızı rica ediyoruz. en gizemlisinden...</p>
            </div>
        </div>
        <input type="checkbox" id="approve" name="approve" value="yes">
        <label class="Helvetica" style="font-size:13px;"> <a asp-controller="login" asp-action="registercontract"><b>filmci sözlük kullanıcı sözleşmesi</b></a>ni okudum ve kabul ediyorum.</label><br>
        <div class="control-group">
            <!-- Button -->
            <div class="controls">
                <button class="btn btn-outline-secondary Helvetica"> kayıt Ol</button>
            </div>
        </div>

    </fieldset>
</form>