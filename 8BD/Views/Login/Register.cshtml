
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form class="form-horizontal" asp-controller="Login" asp-action="AddUser" method="POST">
        <fieldset>
            <div id="legend">
                <legend class="monospace" style="text-decoration: underline">kayıt sayfası</legend>
            </div>
            <div class="control-group">
                <!-- Username -->
                <label class="control-label monospace" for="username">kullanıcı adı</label>
                <div class="controls">
                    <input type="text" id="username" name="username" placeholder="" class="input-xlarge monospace">
                    <p class="help-block monospace" style="font-size:13px;">kullanıcı adınızı seçerken sonradan değiştiremeyeceğinizi unutmayın:)</p>
                </div>
            </div>

            <div class="control-group">
                <!-- E-mail -->
                <label class="control-label monospace" for="email">email</label>
                <div class="controls">
                    <input type="text" id="email" name="email" placeholder="" class="input-xlarge monospace">
                    <p class="help-block monospace" style="font-size:13px;">size arasıra mektup yollayabilmemiz için sanal posta adresinizi rica ediyoruz.</p>
                </div>
            </div>
            <div class="control-group">
                <!-- Password-->
                <label class="control-label monospace" for="password">şifre</label>
                <div class="controls">
                    <input type="password" id="password" name="password" placeholder="" class="input-xlarge">
                    <p class="help-block monospace" style="font-size:13px;">işe biraz gizem katmak için parolanızı rica ediyoruz. en gizemlisinden...</p>
                </div>
            </div>
            <input type="checkbox" id="approve" name="approve">
            <label class="monospace" style="font-size:13px;"> <a asp-controller="login" asp-action="registercontract"><b>filmci sözlük kullanıcı sözleşmesi</b></a>ni okudum ve kabul ediyorum.</label><br>
            <div class="control-group">
                <!-- Button -->
                <div class="controls">
                    <button class="btn btn-outline-secondary monospace"> kayıt Ol</button>
                </div>
            </div>

        </fieldset>
    </form>