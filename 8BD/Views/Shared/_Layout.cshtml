<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _8BD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/dict.css" />
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/fd74ad707e.js" crossorigin="anonymous"></script>
      <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <header>
        @await Html.PartialAsync("Components/Navbar")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-md-3">
                    @await Html.PartialAsync("Components/Sidebar")
                </div>
                <div class="col-md-9">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    @await Html.PartialAsync("Components/Footer")
  
    @RenderSection("Scripts", required: false)
</body>
</html>
