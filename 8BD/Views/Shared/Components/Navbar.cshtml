$(document).ready(function(){

  var ilkkisim = document.querySelector('#ilkkisim');
  var sonkisim = document.querySelector('#sonkisim');
  ;
  if (screen.width <= 699){
    $("#sonkisim").toggle();
  };
  $("#gizleac").click(function(){

    if (sonkisim.style.display =="none") {
      sonkisim.style.display ="block";
      ilkkisim.style.display ="none";


    }

    else {
      ilkkisim.style.display ="block";
      sonkisim.style.display ="none";
    }


  });
});
</script>